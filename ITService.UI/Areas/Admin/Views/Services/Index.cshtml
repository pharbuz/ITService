@using ITService.Domain.Query.Dto.Pagination.PageResults
@using ITService.Domain.Query.Dto
@model ServicePageResult<ServiceDto>

@{
    ViewData["Title"] = "Services";
}


<div class="row">
    <div class="col-8">
        <h2 class="text-primary">Services</h2>
    </div>
    <div class="col-4 text-right">
        <a class="btn btn-outline-primary" asp-action="Add"><i class="fas fa-plus"></i> &nbsp;Add new service</a>
    </div>
</div>

<br />
<div class="row">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col" hidden>Id</th>
                <th scope="col">Name</th>
                <th scope="col">Estimated service price</th>

                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>


            @foreach (var item in Model.Items)
            {
            <tr>
                <td hidden>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.EstimatedServicePrice zł
                </td>
                <td>
                    <a class="btn btn-click text-secondary btn-outline-secondary " asp-action="Update" asp-route-Id="@item.Id">Edit</a>
                </td>
                <td>
                    <form method="post" asp-action="Delete" asp-route-id="@item.Id">
                        <button type="submit" class="btn btn-link text-danger btn-outline-danger ">Delete</button>

                    </form>
                </td>

            </tr>
            }
        </tbody>
    </table>
</div>