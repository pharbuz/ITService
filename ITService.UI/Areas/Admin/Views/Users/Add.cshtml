@model ITService.UI.ViewModels.AddUserViewModel

@using ITService.Domain.Utilities
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row" style="margin-top:20px;">
    <div class="col-md-4">
        <form method="post" asp-area="Admin" asp-controller="Users" asp-action="Add">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User.Login"></label>
                <input asp-for="User.Login" class="form-control" />
                <span asp-validation-for="User.Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Email"></label>
                <input asp-for="User.Email" class="form-control" />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Phone number</label>
                <input asp-for="User.PhoneNumber" class="form-control" />
                <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Street"></label>
                <input asp-for="User.Street" class="form-control" />
                <span asp-validation-for="User.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.City"></label>
                <input asp-for="User.City" class="form-control" />
                <span asp-validation-for="User.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.PostalCode"></label>
                <input asp-for="User.PostalCode" class="form-control" />
                <span asp-validation-for="User.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Password"></label>
                <input type="password" asp-for="User.Password" class="form-control" />
                <span asp-validation-for="User.Password" class="text-danger"></span>
            </div>
            @if (User.IsInRole(Roles.AdminUserRole))
            {
        <div class="form-group">
            <label asp-for="User.RoleId"></label>
            @Html.DropDownListFor(m => m.User.RoleId, Model.Roles, "-Select a role", new { @class = "form-control", name = "roleId" })
            <span asp-validation-for="User.RoleId" class="text-danger"></span>
        </div>
            }
            else
            {
                @Html.HiddenFor(m => m.User.RoleId)
            }

            <button type="submit" class="btn btn-outline-primary">Register</button>
        </form>
    </div>

</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


