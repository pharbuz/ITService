@using ITService.Domain.Query.Dto.Pagination.PageResults
@using ITService.Domain.Query.Dto
@model OrderPageResult<OrderDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<br />
<div class="border p-3">
    <div class="d-flex justify-content-between mb-3">
        <div class="p-2">
            <h2 class="text-primary">Zamówienia</h2>
        </div>
        <div class="p-2">
            <ul class="list-group list-group-horizontal-sm">
                <a style="text-decoration:none" asp-controller="Order" asp-action="Index" asp-route-status="inprocess">
                    <li class="list-group-item">Order inprocess</li>
                </a>
                <a style="text-decoration:none" asp-controller="Order" asp-action="Index" asp-route-status="Order pending">
                    <li class="list-group-item ">Order pending</li>
                </a>
                <a style="text-decoration:none" asp-controller="Order" asp-action="Index" asp-route-status="completed">
                    <li class="list-group-item ">Order completed</li>
                </a>
                <a style="text-decoration:none" asp-controller="Order" asp-action="Index" asp-route-status="rejected">
                    <li class="list-group-item ">Order rejected/refunded</li>
                </a>
                <a style="text-decoration:none" asp-controller="Order" asp-action="Index" asp-route-status="all">
                    <li class="list-group-item">All orders</li>
                </a>
            </ul>
        </div>
    </div>
    <br />
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th hidden scope="col">Id</th>
                <th scope="col">Phone number</th>
                <th scope="col">Order status</th>
                <th scope="col">Payment status</th>
                <th scope="col">Order Date</th>
                <th scope="col">Price</th>
                <th scope="col">Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {

                <tr>
                    <td hidden>
                        @item.Id
                    </td>
                    <td>
                        @item.PhoneNumber
                    </td>
                    <td>
                        @item.OrderStatus
                    </td>
                    <td>
                        @item.PaymentStatus
                    </td>
                    <td>
                        @item.OrderDate
                    </td>
                    <td>
                        @item.OrderTotal zł
                    </td>
                    <td>
                        <a class="btn btn-click text-secondary btn-outline-secondary " asp-action="Details" asp-route-Id="@item.Id">Details</a>
                    </td>
                    

                </tr>
            }
        </tbody>
    </table>

</div>




@section Scripts
{
    <script src="~/js/Order.js"></script>
}
