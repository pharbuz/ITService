@model ITService.UI.ViewModels.ShoppingCartViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="post">
    <br />
    @if (Model.Count > 0)
    {
        <div>
            <div class="container">
                <div class="card">
                    <div class="row container">
                        <div class="col-6" style="padding:12px;">
                            <i class="fa fa-shopping-cart" style="padding: 8px; font-size:25px"></i> &nbsp;
                            <span style="font-size:25px;">Your card</span>
                        </div>
                        <div class="col-6" style="text-align:center; padding:12px;">
                            <a asp-area="Customer" asp-controller="Home" asp-action="Index"  class="btn btn-outline-secondary form-control">Go back to shopping</a>
                        </div>
                    </div>
                    <div style="background-color:black; height:4px;">

                    </div>


                    <div class="card-body">
                        @foreach (var item in Model.Shoppings)
                        {
                            <div class="row">
                                <div class="d-none d-lg-block col-lg-1 text-center py-2">
                                    <img src="@item.Product.Image" class="rounded" width="100%" />
                                </div>
                                <div class="col-12 text-sm-center col-lg-6 text-lg-left">
                                    <h5><strong>@item.Product.Name</strong></h5>
                                   
                                </div>
                                <div class="col-12 text-sm-center col-lg-5 text-lg-right row">
                                    <div class="col-4 text-md-right" style="padding-top:5px;">
                                        <h6><strong>$@item.Product.Price<span class="text-muted">x</span>@item.Count</strong></h6>
                                    </div>
                                    <div class="col-6 col-sm-4 col-lg-6">
                                        <div class="float-right mx-1">
                                            <a asp-action="more" asp-route-Id="@item.Id"  class="btn btn-outline-primary">
                                                <i class="fas fa-plus"></i>
                                            </a>
                                        </div>
                                        <div class="float-right mx-1">
                                            <a asp-action="less" asp-route-Id="@item.Id"  class="btn btn-outline-danger">
                                                <i class="fas fa-minus"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-2 col-sm-4 col-lg-2 text-right">
                                        <a asp-action="remove" asp-route-Id="@item.Id" class="btn btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <hr />
                        }



                        <div class="row">
                            <div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
                                <ul class="list-group">
                                    <li class="list-group-item d-flex justify-content-between bg-light">
                                        <span class="text-info"> Total (USD):</span>
                                        <strong class="text-info">$ <span id="txtOrderTotal">@Model.Order.OrderTotal</span></strong>

                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="card-footer row">

                            <div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">

                                <a asp-action="Summary" asp-area="Customer" asp-controller="Cart" class="btn btn-outline-primary form-control">Summary</a>
                            </div>  
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div style="text-align:center; border:1px solid black" class=" border-1">No products</div>

    }

</form>



