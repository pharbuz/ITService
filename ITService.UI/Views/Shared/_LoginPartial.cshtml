

<ul class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item" >
        <span  class="nav-link " style="color:lightgray"  title="Manage">Hi @User.Identity.Name!</span>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "Customer" })">
            <button  type="submit" class="nav-link btn btn-link text-light">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-light" asp-area="Identity" asp-controller="Account" asp-action="Register" >Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light" asp-area="Identity" asp-controller="Account" asp-action="Login">Login</a>
    </li>
}
</ul>
